# Server Configuration
# IP chính để bind server (mặc định)
PRIMARY_IP=localhost
# IP fallback nếu IP chính không khả dụng
FALLBACK_IP=localhost

# Port Configuration
TCP_PORT=8080
WS_PORT=8081
# Alternative ports nếu ports chính bị chiếm
ALT_TCP_PORTS=8082,8083,8084
ALT_WS_PORTS=8085,8086,8087

# Environment
NODE_ENV=development

# Network Configuration
# Timeout cho việc thử kết nối (milliseconds)
CONNECTION_TIMEOUT=3000
# Số lần retry khi bind IP thất bại
BIND_RETRY_COUNT=3

# Logging
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=false
