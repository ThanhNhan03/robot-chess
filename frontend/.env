# Frontend Configuration
# Backend API Configuration
VITE_API_BASE=http://localhost:5213

# WebSocket Server Configuration (server tích hợp)
# IP chính để kết nối WebSocket
VITE_WS_PRIMARY_IP=localhost
# IP fallback nếu IP chính không kết nối được
VITE_WS_FALLBACK_IP=localhost

# Port Configuration
VITE_WS_PRIMARY_PORT=8081
VITE_WS_FALLBACK_PORTS=8085,8086,8087

# Robot TCP Configuration (không cần nữa - đã tích hợp vào server)
# VITE_ROBOT_IP=localhost
# VITE_ROBOT_PORT=8082
# VITE_ROBOT_TCP_ENDPOINT=/robot/move_piece/goal

# Connection Configuration
VITE_WS_CONNECTION_TIMEOUT=5000
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_INTERVAL=3000

# Development
VITE_ENV=development
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=info
